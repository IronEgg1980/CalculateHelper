<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.DataSafeFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        style="@style/MainActivityButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="116dp"
        android:text="备份"
        android:outlineAmbientShadowColor="@android:color/holo_green_light"
        android:outlineSpotShadowColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@android:color/holo_green_light"
        app:strokeColor="@android:color/holo_green_light" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        style="@style/MainActivityButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="116dp"
        android:text="恢复"
        android:outlineAmbientShadowColor="@android:color/holo_orange_light"
        android:outlineSpotShadowColor="@android:color/holo_orange_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@android:color/holo_orange_light"
        app:strokeColor="@android:color/holo_orange_light" />
</androidx.constraintlayout.widget.ConstraintLayout>